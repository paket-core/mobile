<?xml version="1.0" encoding="UTF-8"?>
<local:BasePage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PaketGlobal.LaunchPackagePage"
    xmlns:local="clr-namespace:PaketGlobal">
    <ContentPage.Content>
        <ScrollView x:Name="contentPackage">
            <StackLayout Orientation="Vertical" Padding="0,10,10,0" Spacing="0">
                <StackLayout Orientation="Vertical" Padding="15,0,0,5" Spacing="10">
                    <Label Text = "Participants" TextColor="#FFA500"/>
                    <StackLayout Orientation="Vertical" Padding="0,0,0,0" Spacing="0">
                        <Label Text = "Recipient" TextColor="#00796B"/>
                        <Entry x:Name="entryRecepient" Text = "{Binding RecipientPubkey}" HorizontalOptions="FillAndExpand" Placeholder="Pub Key or callsign"
                                         Completed="HandleCompleted" Keyboard = "Text"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Padding="0,0,0,0" Spacing="0">
                        <Label Text = "Courier" TextColor="#00796B"/>
                        <Entry x:Name="entryCourier" Text = "{Binding CourierPubkey}" HorizontalOptions="FillAndExpand" Placeholder="Pub Key or callsign"
                                         Completed="HandleCompleted" Keyboard = "Text"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Vertical" Padding="15,0,0,5" Spacing="10">
                    <Label Text = "Information" TextColor="#FFA500"/>
                    <StackLayout Orientation="Vertical" Padding="0,0,0,0" Spacing="0">
                        <Label Text = "Deadline" TextColor="#00796B"/>
                        <Entry x:Name="entryDeadline" Focused="DeadlineTapped" Text = "{Binding DeadlineString, Mode=TwoWay}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Vertical" Padding="15,0,0,5" Spacing="10">
                    <Label Text = "Funds" TextColor="#FFA500"/>
                    <StackLayout Orientation="Vertical" Padding="0,0,0,0" Spacing="0">
                        <Label Text = "Payment (BULs)" TextColor="#00796B"/>
                        <Entry x:Name="entryPayment" Text = "{Binding Payment}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Numeric"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Padding="0,0,0,0" Spacing="0">
                        <Label Text = "Collateral (BULs)" TextColor="#00796B"/>
                        <Entry x:Name="entryCollateral" Text = "{Binding Collateral}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Numeric"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</local:BasePage>
