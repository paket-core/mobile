<?xml version="1.0" encoding="UTF-8"?>
<local:BasePage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PaketGlobal.LaunchPackagePage"
             xmlns:local="clr-namespace:PaketGlobal">
    <local:BasePage.Content>
        <TableView x:Name="contentPackage" HasUnevenRows="true" RowHeight="-1">
            <TableRoot>
                <TableSection Title="Participants">
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="15,8,15,5" Spacing="0">
                            <Label Text = "Recipient" TextColor="#00796B"/>
                            <Entry x:Name="entryRecepient" Text = "{Binding RecipientPubkey}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Text"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="15,8,15,5" Spacing="0">
                            <Label Text = "Courier" TextColor="#00796B"/>
                            <Entry x:Name="entryCourier" Text = "{Binding CourierPubkey}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Text"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection Title="Information">
                    <ViewCell Tapped="DeadlineTapped">
                        <StackLayout Orientation="Vertical" Padding="15,8,15,5" Spacing="0">
                            <Label Text = "Deadline" TextColor="#00796B"/>
                            <Entry x:Name="entryDeadline" IsEnabled="false" Text = "{Binding DeadlineString, Mode=TwoWay}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Numeric"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection Title="Funds">
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="15,8,15,5" Spacing="0">
                            <Label Text = "Payment (BULs)" TextColor="#00796B"/>
                            <Entry x:Name="entryPayment" Text = "{Binding Payment}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Numeric"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="15,8,15,5" Spacing="0">
                            <Label Text = "Collateral (BULs)" TextColor="#00796B"/>
                            <Entry x:Name="entryCollateral" Text = "{Binding Collateral}" HorizontalOptions="FillAndExpand" Placeholder="{Binding Name}"
                                         Completed="HandleCompleted" Keyboard = "Numeric"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </local:BasePage.Content>
</local:BasePage>
